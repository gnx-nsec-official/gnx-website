// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model JoinRequest {
  id          Bytes  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String
  phoneNumber String
  reason      String
  department  String
  gradYear    String
  gender      String
}
